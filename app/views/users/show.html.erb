<div class="row">
  <div class="col-md-8">
  	<h2><%= @user.username %>'s comments:</h2>
	<%- @user.comments.each do |comment| %>
	<p class="comment_body">
	  <span><%= link_to comment.post.title, post_path(comment.post) %> "<%= comment.body %>"</span>
	</p>
	<% end %>
  </div>

  <div class="col-md-4">
  	<div class = "user_info">
		<p>
		  <h1><%= @user.username %></h1>
		</p>

		<p>
		  <h2>Karma: <%= @user.karma %></h2>
		</p>
	</div>
  </div>
</div>

