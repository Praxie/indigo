<div class = "commentator">
	<div class = "image">
	 	<%= link_to image_tag("#{ @post.content }"), post_path(@post) %>
	</div>
	<div class = "topcomment">
 		<h1><%= @post.comments.last.body %></h1>
 		<h2>- <%= link_to @post.comments.last.user.username, user_path(@post.comments.first.user) %></h2>
 	</div>
</div>